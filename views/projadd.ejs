    <meta name="msapplication-TileImage" content="/images/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
  </head>
  <body>
    <% include ../views/layouttopo %>
    <% include ../views/layoutmenu %>

    <p></p>
      <% if(erro != '0') {  %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="text-align:center">
        <strong> <%= erro %> </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
  </div>
      <% } %>

    <div class="row justify-content-around bg-dark" style="margin:1px;">
      <div style="position:relative;"><img src="/images/projeto.png" class="rounded float-left"></div>
      <!-- formulario -->
      <form action="/proj/add" method="POST" id ="formi" class="bg-dark rounded">
          </br></br></br>
          <div class="form-group d-flex justify-content-end">
            <label for="pnome" style="color:white;"><h4>Nome do Proj:&nbsp</h4></label>
            <input type="text" name="pnome" class="form-control col-md-6"
            <% if(results){ %> value="<%= results.pnome %>" <% } %>
            >
          </div>
          <div class="form-group d-flex justify-content-end">
            <label for="pdesc" style="color:white;"><h4>Descrição:&nbsp</h4></label>
            <input type="text" class="form-control col-md-6" name="pdesc"
            <% if(results){ %> value="<%= results.pdesc %>" <%}%>
            >
          </div>
          <div class="form-group d-flex justify-content-end">
            <label for="plink" style="color:white;"><h4>Github:&nbsp</h4></label>
            <input type="text" class="form-control col-md-6" name="plink"
            <% if(results){ %> value="<%= results.plink %>" <%}%>
            >
          </div>
          <div class="form-group d-flex justify-content-end">
            <label for="dnome" style="color:white;"><h4>Desenvolvedor:&nbsp</h4></label>
            <input type="text" class="form-control col-md-6" name="dnome"
            <% if(results){ %> value="<%= results.dnome %>" <%}%>
            >
          </div>
          <div class="form-group d-flex justify-content-end">
            <div class="input-group mb-3 d-flex justify-content-end">
              <div class="input-group-prepend">
                <label for="dnome" style="color:white;"><h4>Linguagem:&nbsp</h4></label>
              </div>
              <select class="custom-select col-md-6" id="inputGroupSelect01" name="linguagem">
                <option
                <% if(!results) { %> selected
                <%}%>
                > Escolha </option>
                <option value="Node"
                <% if(results.linguagem == 'Node') { %> selected
                <%}%>
                >Node.js</option>
                <option value="Laravel"
                <% if(results.linguagem == 'Laravel') { %> selected
                <%}%>
                >Laravel</option>
                <option value="Prolog"
                <% if(results.linguagem == 'Prolog') { %> selected
                <%}%>
                >Prolog</option>
                <option value="C-C++"
                <% if(results.linguagem == 'C-C++') { %> selected
                <%}%>
                >C-C++</option>
                <option value="PHP"
                <% if(results.linguagem == 'PHP') { %> selected
                <%}%>
                >PHP</option>
                <option value="Javascript"
                <% if(results.linguagem == 'Javascript') { %> selected
                <%}%>
                > Javascript</option>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-outline-light float-right">Enviar</button>
        </form>
    </div>
    </br>
    <% include ../views/rodape %>
    <!-- Script js jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
