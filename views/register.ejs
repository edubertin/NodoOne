  <body>
    <% include ../views/layouttopo %>
    <% include ../views/layoutmenu %>

    <p></p>
      <% if(erro != '0') {  %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert" style="text-align:center">
        <strong> <%= erro %> </strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
  </div>
      <% } %>

  <div class="row justify-content-around bg-dark" style="margin:1px;height:100%;">
  <div style="position:relative; margin-top:40px;"><img src="/images/signin.png" class="float-left"></div>

    <form action="/users/register" method="POST" class="bg-dark rounded">
        </br></br>
        <div class="form-group d-flex justify-content-end">
          <label for="nome" style="color:white;"><h4>Nome:&nbsp</h4></label>
          <input type="text" name="nome" class="form-control col-md-10"
          <% if(results){ %> value="<%= results.nome %>" <% } %>
          >
        </div>
        <div class="form-group d-flex justify-content-end">
          <label for="email" style="color:white;"><h4>Email:&nbsp</h4></label>
          <input type="email" class="form-control col-md-10" name="email"
          <% if(results){ %> value="<%= results.email %>" <%}%>
          >
        </div>
        <div class="form-group d-flex justify-content-end">
          <label for="github" style="color:white;"><h4>Github:&nbsp</h4></label>
          <input type="text" class="form-control col-md-10" name="github"
          <% if(results){ %> value="<%= results.github %>" <%}%>
          >
        </div>
        <div class="form-group d-flex justify-content-end">
          <label for="password" style="color:white;"><h4>Senha:&nbsp</h4></label>
          <input type="password" class="form-control col-md-10" name="password"
          <% if(results){ %> value="<%= results.password %>" <%}%>
          >
        </div>
        <button type="submit" style="margin-bottom:10px;" class="btn btn-outline-light float-right">Enviar</button>
      </form>

  </div>
</br>
    <% include ../views/rodape %>
